<h1>Edit <%= @brand.name %></h1>

<% if @brand.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @brand.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action"/brands/<%= @brand.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="brand_name">New Brand Name</label>
  <input id="brand_name" name="update_brand[name]" type="text".>
  <button>Update Brand</button>